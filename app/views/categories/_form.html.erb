<%= form_for @categoria, remote: true do |f| %>
  <div class="form-group">
  	<H4 class="control-label">Datos de Categoria:</H4>
  </div>

  <div class="item form-group<%= @categoria.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :nombre, "nombre de categorias:" %>
  	<div class="input-group">
  		<%= f.text_field :nombre, {:class=> "form-control", :placeholder=>"introduce el nombre de la categoria"} %>
  		<% if @categoria.errors[:nombre].any? %>
  			<p class="bg-danger"><%= @categoria.errors[:nombre].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

  <div class="item form-group<%= @categoria.errors[:descripcion].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :descripcion, "Descripcion de categorias: "%>
  	<div class="input-group">
  		<%= f.text_area :descripcion, {:class=> "form-control", :placeholder=>"introduce la descripcion de la categoria"} %>
  		<% if @categoria.errors[:descripcion].any? %>
  			<p class="bg-danger"><%= @categoria.errors[:descripcion].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>
  </div>

	<div class="actions col-md-9 cold-sm-9 col-xs-12 col-md-offset-3">
	<%= f.submit @categoria.new_record? ? "Crear Categoria" : "Actualizar Categoria", :class => "btn btn-success" %>
	</div>
<%end%>