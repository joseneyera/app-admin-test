<h1 class = "h3 mb-2 text-gray-800">Clientes</h1>

<div>
	<%= link_to new_client_path, {remote: true, class: " btn btn-info", id: "anadir-cliente-btn"} do %>
		<span class="fas fa-plus-square"></span>
	<%end%>
</div>
<br />

<div class="card shadow mb-4">
	<div class="card-body">
		<div class="table-responsive">
			<table id="tablaClientes" class="table table-bordered" width="100%">
				<thead>
					<tr>
						<th>Nombre Cliente</th>
						<th>Direccion</th>
						<th>Telefono</th>
						<th></th>	
					</tr>
				</thead>
				<tbody>
					<% @clientes.each do |cli| %>
					<tr id="cliente_<%= cli.id %>">
						<td><%= cli.nombre %></td>
						<td><%= cli.direccion %></td>
						<td><%= cli.telefono %></td>
						<td>
							<%= link_to "editar", edit_client_path(cli), html_options = {class: "btn btn-info btn-xs", remote: true } %>
							<%= link_to "borrar", cli, remote: true, method: :delete, data: { confirm: "Borrar Cliente: #{cli.nombre}?"}, class: "btn btn-danger btn-xs"  %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%= render 'modal_clientes' %>
