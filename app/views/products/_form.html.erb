<%= form_for @product, remote: true, multiple: true  do |f| %>
  <div class="form-group">
  	<H4 class="control-label">Datos del Producto:</H4>
  </div>

  <div class="item form-group<%= @product.errors[:imagen].any? ? ' has-error has-feedback' : '' %>">
  	<%= image_tag(@product.imagen.url, size: "150x150", class: "rounded-circle") if @product.imagen? %>
  	<div class="input-group">
  		<%= f.file_field :imagen, {:class=> "form-control"} %>
  		<% if @product.errors[:imagen].any? %>
  			<p class="bg-danger"><%= @product.errors[:imagen].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

  <div class="item form-group<%= @product.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :nombre, "nombre del producto:" %>
  	<div class="input-group">
  		<%= f.text_field :nombre, {:class=> "form-control", :placeholder=>"introduce el nombre del producto"} %>
  		<% if @product.errors[:nombre].any? %>
  			<p class="bg-danger"><%= @product.errors[:nombre].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

  <div class="item form-group<%= @product.errors[:descripcion].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :descripcion, "Descripcion del producto: "%>
  	<div class="input-group">
  		<%= f.text_area :descripcion, {:class=> "form-control", :placeholder=>"introduce la descripcion del producto"} %>
  		<% if @product.errors[:descripcion].any? %>
  			<p class="bg-danger"><%= @categoria.errors[:descripcion].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>
  </div>

  <div class="item form-group<%= @product.errors[:precio].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :precio, "precio del producto:" %>
  	<div class="input-group">
  		<%= f.number_field :precio, {:class=> "form-control", :placeholder=>"introduce el precio del producto"} %>
  		<% if @product.errors[:precio].any? %>
  			<p class="bg-danger"><%= @product.errors[:nombre].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

  <div class="item form-group<%= @product.errors[:existencia].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :existencia, "existencia del producto:" %>
  	<div class="input-group">
  		<%= f.number_field :existencia, {:class=> "form-control", :placeholder=>"Stock inicial"} %>
  		<% if @product.errors[:existencia].any? %>
  			<p class="bg-danger"><%= @product.errors[:existencia].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

  <div class="item form-group<%= @product.errors[:categoria].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :categoria, "Categoria:" %>
  	<div class="input-group">
  		<%= collection_select(:product, :category_id, @categorias, :id, :nombre, {:prompt =>'Seleccione una categoria'},{class: "form-control" }) %>
  		<% if @product.errors[:categoria].any? %>
  			<p class="bg-danger"><%= @product.errors[:categoria].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

  <div class="item form-group<%= @product.errors[:proveedor].any? ? ' has-error has-feedback' : '' %>">
  	<%= f.label :proveedor, "Proveedor:" %>
  	<div class="input-group">
  		<%= collection_select(:product, :supplier_id, @proveedores, :id, :nombre, {:prompt =>'Seleccione un proveedor'},{class: "form-control"}) %>
  		<% if @product.errors[:proveedor].any? %>
  			<p class="bg-danger"><%= @product.errors[:proveedor].to_s[/\w([^'']*)/]%></p>
  		<% end %>
  	</div>		
  </div>

	<div class="actions col-md-9 cold-sm-9 col-xs-12 col-md-offset-3">
	<%= f.submit @product.new_record? ? "Crear Producto" : "Actualizar Producto", :class => "btn btn-success" %>
	</div>
<%end%>